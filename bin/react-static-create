#!/usr/bin/env node

var program = require('commander')
const chalk = require('chalk')

program
  .option('-n, --name', 'the name of your new project')
  .option('-t, --template', 'the template of your project')
  .on('--help', function() {
    console.log('')
    console.log(`  ${chalk.green('Template Support:')}`)
    console.log('    Github User/Repo:')
    console.log(`    $ react-static create -t ${chalk.yellow('githubUser/repoName')}`)
    console.log('')
    console.log('    Git Repo URLs:')
    console.log(`    $ react-static create -t ${chalk.yellow('git@github.com:mjsisley/react-static-template-basic.git')}`)
    console.log(`    $ react-static create -t ${chalk.yellow('https://github.com/mjsisley/react-static-template-basic.git')}`)
    console.log('')
  })
  .parse(process.argv)
