{
  "name": "react-static",
  "description": "A progressive static site generator for React",
  "dependencies": {
    "lerna": "^2.5.1"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-config-react-tools": "^1.0.6",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "clean": "lerna clean --yes && rm -rf node_modules",
    "start": "lerna run watch --scope react-static & lerna run start --stream --scope",
    "build": "lerna run build --stream --scope",
    "postinstall": "lerna bootstrap --hoist",
    "builddocs": "gitdocs build",
    "publish": "lerna publish",
    "prepublishOnly": "yarn build",
    "publishnext": "yarn publish --tag next",
    "servedocs": "serve docs-dist -p 3000",
    "startdocs": "gitdocs serve",
    "test": "eslint src examples test && yarn run test-sample-build",
    "test-large-build": "yarn build && (cd test/stress-test-routes && yarn && ../../bin/react-static build)",
    "test-sample-build": "yarn build && (cd test/minimal-website && yarn && ../../bin/react-static build)"
  }
}